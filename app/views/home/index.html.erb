
<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
	<%= image_tag 'instaflan_home_logo.png', class: "card-img-top" %>
	<div class="images-section pt-3 d-none d-lg-block"> </div>
	
	<div class="login-section pt-3">
		<div class="card text-center pt-5" style="width: 23rem;">
			<%= image_tag 'instaflan_logo.png', class: "card-img-top" %>
			<div class="card-body">
				<div class="mb-3 mt-4">
					<input type="email" class="form-control" id="email" placeholder="Phone Number, Username, or E-Mail"> </div>
				<div class="mb-3">
					<input type="password" class="form-control" id="password" placeholder="Password"> </div>
				<a href="#" class="btn btn-dark d-lg-block">Log in to Instaflan </a>

				<div class="d-flex align-items-center mt-4">
					<div class= "line"> </div>
					<h2 class="line-text">OR</h2>
					<div class= "line"> </div>
				</div>

				<a href="#" class="d-lg-block mt-4 text-decoration-none fw-bold">
				<%= image_tag("facebook.png", class: "facebook") %>
				Log in with Facebook
			</a>

			<a href="#" class="fs-6 d-block my-4 text-decoration-none"> Forgot password? </a>

			</div>
		</div>
		<div class="card text-center py-2 mt-3" style="width: 23rem;">
			<div class="card-text">
				Don't have an account?
				<a href="#" class="fs-6 d-block my-4 text-decoration-none"> Sign up </a>
			</div>
		</div>



</div>
</div>

