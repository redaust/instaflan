


<div id="<%= dom_id post %>">

  <div class="card" style="width: 26rem;">
    <div class="card-header bg-white">
      <div class="d-flex justify-content-between">
     <% if post.user.profile_pic.attached? %>
     <%= image_tag post.user.profile_pic, class: "img-thumbnail rounded", style: "width: 10%" %>
     <% else %>
     <%= image_tag 'flanatar.png', class: "img-thumbnail rounded", style: "width: 10%" %>
     <% end %>
      <span class="fw-bold mx-2"> <%= post.user.username %> </span>
      <br/> User # <%= post.user_id %> </div>

      <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle fs-6" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Options
  </button>
  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="#">Edit Post</a></li>
    <li><a class="dropdown-item" href="#">Delete Post</a></li>
  </ul>
</div>
      </div>

  
  <div class="card-body">
    <div id="carouselExample" class="carousel slide">
  <div class="carousel-inner">
    <% post.images.each do |img| %>
    <div class="carousel-item active">
      <%= image_tag img, class: "d-block w-100" %>
    </div>
  <% end %>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
    <p class="card-text"><%= post.caption %></p>
  </div>
  <div class="card-footer"> Footer </div>
</div>





</div>
